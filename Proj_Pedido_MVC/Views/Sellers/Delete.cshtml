
@model Proj_Pedido_MVC.Models.Seller

@{
    ViewData["Title"] = "Delete";
}

    <h2>@ViewData["Title"]</h2>

<h3>Are your sure you want to delete this?</h3>

<div>
    <h4>Seller</h4>
    <hr />
    <!--objeto dl lista os campos dos objetos-->

    <dl class="dl-horizontal">
        <!--Título - DisplayNameFor-->
        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>

        <dt>@Html.DisplayNameFor(model => model.Email)</dt>
        <dd>@Html.DisplayFor(model => model.Email)</dd>

        <dt>@Html.DisplayNameFor(model => model.BirthDate)</dt>
        <dd>@Html.DisplayFor(model => model.BirthDate)</dd>

        <dt>@Html.DisplayNameFor(model => model.BaseSalary)</dt>
        <dd>@Html.DisplayFor(model => model.BaseSalary)</dd>
    </dl>


    <!--Botão para cancelar ou confirmar a solicitação
        asp-action="Delete" chama a ação Delete, mas agora será o POST
        input type="submit" - botão para enviar os dados
        value - palavra que vai ter no botão
        btn-danger - confirmação de deleção
        hidden - campo oculto no formulário para enviar os dados
        asp-action="Index" - link para a pessoa poder cancelar e voltar para a listagem de vendedores
        -->

    <form asp-action="Delete">

        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn-danger" />
        <a asp-action="Index">Back to List</a>

    </form>  
</div>